<% if (!getValidation(accordion)) { } else { %>
  <div class="accordion" id="accordionExample">
    <% for (let i = 0; i <= Number(accordion['length'] - 1); i++) { %>
      <% if (!getValidation(accordion[i]['title']) || !getValidation(accordion[i]['paragraph'])) { } else { %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= i; %>">
            <button
            class="accordion-button <%= !i ? '' : 'collapsed'; %>"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapse<%= i; %>"
            aria-expanded="<%- !i ? 'true' : 'false'; %>"
            aria-controls="collapse<%= i; %>"
            >
              <%- accordion[i]['title']; %>
            </button>
          </h2>
          <div
          id="collapse<%= i; %>"
          class="accordion-collapse collapse<%= !i ? ' show' : ''; %>"
          aria-labelledby="heading<%= i; %>"
          data-bs-parent="#accordionExample"
          >
            <div class="accordion-body">
              <%= accordion[i]['paragraph']; %>
            </div>
          </div>
        </div>
      <% } %>
    <% } %>
  </div>
<% } %>