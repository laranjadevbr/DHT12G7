<%
    let getDATE = (string) => {
        let d = new Date(string).getDate().toString().padStart(2, '0'),
        m = (new Date(string).getMonth() + 1).toString().padStart(2, '0'),
        y = new Date(string).getFullYear();
        return d + '/' + m + '/' + y;
    }
    let listing = (title, contents) => {
        let html = '';
        if (!validate(title) || !validate(contents)) { } else {
            html += '<h' + subtitleNumber + '>';
            html += capitalize(title);
            html += '</h' + subtitleNumber + '>';
            if (title === 'cost') {
                html += '<p>' + currency(Number(contents)) + '</p>';
            } else if (title === 'access key') {
                html += '<p>';
                    html += '<a href=\"mailto:' + contents.toLowerCase() + '\" target=\"_blank\">';
                        html += contents.toLowerCase();
                    html += '</a>';
                html += '</p>';
            } else if (title === 'birth date' || title === 'created' || title === 'updated') {
                html += '<p>' + getDATE(contents) + '</p>';
            } else {
                html += '<p>' + contents + '</p>';
            }
            html += '<div class=\"mb-' + mb + '\"></div>';
        }
        return html;
    };
    let html = '';
    if (typeof index === 'undefined' || typeof item === 'undefined') { } else {
        for (let i = 0; i < item['length']; i++) {
            let title = typeof item[i] === 'string' ? item[i] : item[i][1];
            let contents = index[typeof item[i] === 'string' ? item[i] : item[i][0]];
            html += typeof contents !== 'undefined' ? listing(title, contents) : '';
        };
    };
    html += '<div class=\"right-all\">';
        html += '<a href=\"' + pathPrefix + 'edit/' + index['id'] + '\">';
            html += '<button type=\"submit\" class=\"' + btnClass.trim() + '\">';
                html += capitalize('edit');
            html += '</button>';
        html += '</a>';
        html += '<button type=\"submit\" class=\"' + btnClass.trim() + '\"';
        html += ' onclick=\"location.href=document.referrer\">';
            html += capitalize('come back');
        html += '</button>';
    html += '</div>';
%>
<%- html; %>